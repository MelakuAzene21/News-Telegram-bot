{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022"],
    "types": ["node"],

    // Modern JavaScript features
    "moduleResolution": "node",
    "allowJs": true,

    // Output settings
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strict type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // CommonJS interoperability
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    // Remove JSX if not using React
    "jsx": "preserve"
  }
}
